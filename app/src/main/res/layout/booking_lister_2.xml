<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cardHeader"
        android:layout_width="373dp"
        android:layout_height="150dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="@dimen/cornerRadius"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="392dp"
            android:layout_height="match_parent"
            android:padding="@dimen/constraintPaddingOverall"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-73dp"
            tools:layout_editor_absoluteY="-25dp">


            <TextView
                android:id="@+id/accName"
                android:layout_width="335dp"
                android:layout_height="33dp"
                android:layout_marginBottom="4dp"
                android:text="@string/accomodation_more"
                app:layout_constraintBottom_toTopOf="@+id/bookingDates"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/cusName"
                android:layout_width="348dp"
                android:layout_height="34dp"
                android:text="@string/cus_name"
                app:layout_constraintStart_toStartOf="@+id/accName"
                tools:layout_editor_absoluteY="19dp" />

            <ImageView
                android:id="@+id/repView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_report_24"
                tools:layout_editor_absoluteX="315dp"
                tools:layout_editor_absoluteY="95dp" />

            <TextView
                android:id="@+id/bookingDates"
                android:layout_width="295dp"
                android:layout_height="38dp"
                android:text="@string/booking_more"
                app:layout_constraintStart_toStartOf="@+id/accName"
                tools:layout_editor_absoluteY="94dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>



</androidx.constraintlayout.widget.ConstraintLayout>